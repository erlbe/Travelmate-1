<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/header2"
    tools:context="com.telematica.travelmate.userinterface.signup.SignupActivity">

    <ImageView
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:id="@+id/round_shade"
        android:src="@drawable/round_shade"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <ImageView
        android:layout_width="77dp"
        android:layout_height="108dp"
        android:id="@+id/logo"
        android:src="@drawable/appsymbol"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="false"
        android:layout_alignTop="@+id/round_shade"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sign up"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/round_shade"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/new_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingTop="20dp"
        android:textColorHint="#FFFFFF"
        android:selectAllOnFocus="false"
        android:layout_above="@+id/new_email"/>

    <EditText
        android:id="@+id/new_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_prompt"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingTop="20dp"
        android:textColorHint="#FFFFFF"
        android:selectAllOnFocus="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password_prompt"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/new_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Sign up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:id="@+id/button"
        android:onClick="doSignUp"/>

</RelativeLayout>
