<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff59d"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_padding_tiny"
    android:paddingLeft="@dimen/margin_padding_tiny"
    android:paddingRight="@dimen/margin_padding_tiny"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.telematica.travelmate.userinterface.entryadd.AddEntryActivity"
    tools:showIn="@layout/activity_add_entry">


    <RelativeLayout
        android:id="@+id/toplayout1"
        android:background="@drawable/notetop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/margin_padding_tiny"
        android:paddingLeft="@dimen/margin_padding_tiny"
        android:paddingTop="@dimen/margin_padding_tiny" >

        <EditText
            android:id="@+id/edit_text_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:textSize="@dimen/text_size_xxnormal"
            android:hint="@string/category"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_action_folder_open"
            android:focusable="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/margin_padding_tiny" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/toplayout"
        android:background="@drawable/notetop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/margin_padding_tiny"
        android:paddingLeft="@dimen/margin_padding_tiny"
        android:paddingTop="@dimen/margin_padding_tiny" >

        <EditText  android:id="@+id/edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:textSize="@dimen/text_size_xxnormal"
            android:hint="@string/title"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/margin_padding_tiny" />
    </RelativeLayout>




    <view
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/edit_text_entry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toplayout"
        class="com.telematica.travelmate.userinterface.entryadd.LinedEditText"
        android:background="@android:color/transparent"
        android:fadingEdge="vertical"
        android:gravity="top"
        android:padding="@dimen/margin_padding_tiny"
        android:scrollbars="vertical"
        android:textSize="@dimen/text_size_header" />


</LinearLayout>
